@page "/resourceLibrary"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .background-image {
            background-image: url('img/medicineSearch.png');
            background-size: cover;
            background-position: center;
            /* width: 1000px; */
            height: 400px; /* Adjust the height as needed */
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: black;
        }

        .search-container {
            display: flex;
            justify-content: space-between;
            padding: 10px;
            background-color: #f1f1f1;
        }

        .search-bar {
            width: 70%;
        }

        .search-button {
            width: 25%;
        }

        .underline {
            border-bottom: 1px solid #ccc;
            margin-bottom: 10px;
        }

        .recent-searches {
            margin-bottom: 20px;
        }

        .footer {
            background-color: #f1f1f1;
            padding: 20px;
            text-align: center;
        }

        .footer a {
            text-decoration: none;
            color: #007BFF;
            margin: 0 10px;
        }

        .footer a:hover {
            text-decoration: underline;
        }
        .container{
            width:375px;
            height: 520px;
            background: #fff;
            border-radius:15px;
            box-shadow:4px 4px 30px rgba(0, 0, 0, 0.06);
            padding:20px;
            overflow-y: scroll;
        }

        .container::-webkit-scrollbar{
            display:none;
        }
        .container form{
            width: 100%;
            border: 1px solid rgb(82, 74, 235);
            border-radius:4px;
            display:flex;
            flex-direction: row;
            align-items: center;
        }
        .container form input{
            border: none;
            outline: none;
            box-shadow: none;
            width:100%;
            font-size: 16px;
            font-weight:600;
            padding:8px 10px;
        }
        .container form i{
            padding-left: 10px;
        }

        .product-list{
            padding:20px 0;
        }
        .product{
            display: flex;
            align-items: center;
            cursor: pointer;
            padding-bottom: 15px;
        }

        .product img{
            width:70px;
            height:70px;
            object-fit:cover;
            border-radius:5px;
        }

        .product .p-details{
            padding-left:15px;
        }
        .product .p-details h2{
            font-size:20px;
            color: #1d1d1d;
        }

        .product .p-details h3 {
            font-size: 18px;
        }

    </style>
    <title>VitalMed Solutions</title>
</head>
<body>

    <div class="background-image">
        <h1>VitalMed Solutions</h1>
    </div>

    <section class="container">
        <form>
            <i class="fas fa-search"></i>
            <input type="text" name="" id="search-item" placeholder="Search products"
            onkeyup="search()">
        </form>

        <div class="product-list">
            <div class="product">
                <img src="img/medicine_hydrocodone.png" alt="" />
                <div class="p-details">
                    <h2>Hydrocodone</h2>
                    <h3>
                        For the treatment of severe pain and an antitussive(cough suppressant) for adults.
                    </h3>
                </div>
            </div>

            <div class="product">
                <img src="img/medicine1_metformin.png" alt="" />
                <div class="p-details">
                    <h2>Metformin</h2>
                    <h3>
                        For the treatment of type 2 diabetes and polycystic ovarian syndrome(PCOS).
                    </h3>
                </div>
            </div>

            <div class="product">
                <img src="img/medicine1_50mg-losartan-potassium-tablets.png" alt="" />
                <div class="p-details">
                    <h2>Losartan</h2>
                    <h3>
                        For the treatment of High Blood Pressure(hypertension) and decrease risk of stroke.
                    </h3>
                </div>
            </div>

            <div class="product">
                <img src="img/medicine2_augmentin.png" alt="" />
                <div class="p-details">
                    <h2>Antibiotics: Augmentin 625Mg - 20 Tablets</h2>
                    <h3>
                        For the treatment of most illnesses caused by bacteria infection.
                    </h3>
                </div>
            </div>

            <div class="product">
                <img src="img/medicine2_augmentin-liquid.png" alt="" />
                <div class="p-details">
                    <h2>Antibiotics: Augmentin 457MG/5ML Syrup 70Ml</h2>
                    <h3>
                        For the treatment of severe pain and an antitussive(cough suppressant) for adults.
                    </h3>
                </div>
            </div>
        </div>

        <div>
        </div>
    </section>
    <script src="js/app.js"></script>

</body>
</html>
