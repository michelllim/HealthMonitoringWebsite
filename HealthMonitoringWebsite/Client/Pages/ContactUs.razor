@page "/ContactUs/"
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #013220;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        section {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1, h2 {
            color: #013220;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        a {
            color: #007BFF;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .contact-info {
            font-size: 18px;
            line-height: 1.5;
        }

        .contact-info span {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <h1>Contact Us</h1>
    </header>

    <section>
        <h2>Get in Touch</h2>
        <p>
            We'd love to hear from you. Here's how you can reach us:
        </p>

        <ul class="contact-info">
            <li><span>Phone:</span> +65 8976 7237</li>
            <li><span>Email:</span> info@vitalmedsolutions.com</li>
            <li><span>Address:</span> 123 Health Street, Vitality City, VC 12345</li>
        </ul>

        <p>
            Feel free to contact us for appointments, inquiries, or any assistance you may need. We're here to help!
        </p>
    </section>
</body>
</html>
