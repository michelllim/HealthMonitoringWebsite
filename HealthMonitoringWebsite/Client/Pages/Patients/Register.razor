@page "/patients/register/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Register Details</h3>
<hr />
@* <br /> *@

<FormComponent ButtonText="Save" patient="patient" OnValidSubmit="@CreatePatient" />

@code {
	private Patient patient = new Patient();

	private async Task CreatePatient()
	{
		patient.PatientID = patient.Id;
		await _client.PostAsJsonAsync(Endpoints.PatientsEndpoint, patient);
		_navManager.NavigateTo("/");
	}

}